	<bean name="bcryptEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	
	<bean id="authenticationFailureHandler" class="com.twolak.emusicstore.security.LoginFailureHandler" />
</beans>
